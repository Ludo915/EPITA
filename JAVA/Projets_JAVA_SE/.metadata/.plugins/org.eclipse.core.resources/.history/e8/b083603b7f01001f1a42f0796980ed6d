// Interface Mesurable
public interface Mesurable {
    double getMesure(); // Méthode pour obtenir la mesure
    String UNITE_DE_MESURE = "cm"; // Constante représentant l'unité de mesure
}

// Classe Personne implémentant l'interface Mesurable
public class Personne implements Mesurable {
    private double taille; // La mesure de la personne correspond à sa taille en cm
    
    public Personne(double taille) {
        this.taille = taille;
    }
    
    @Override
    public double getMesure() {
        return taille;
    }
}

// Classe Cercle implémentant l'interface Mesurable
public class Cercle implements Mesurable {
    private double rayon; // La mesure du cercle correspond à son rayon en cm
    
    public Cercle(double rayon) {
        this.rayon = rayon;
    }
    
    @Override
    public double getMesure() {
        return rayon;
    }
}

// Classe TestMesurable pour tester les objets Mesurables
public class TestMesurable {
    // Méthode pour afficher la mesure associée à un objet Mesurable
    public static void afficheMesurable(Mesurable objetMesurable) {
        System.out.println("Mesure : " + objetMesurable.getMesure() + " " + Mesurable.UNITE_DE_MESURE);
    }
    
    // Méthode main pour tester les classes Mesurables
    public static void main(String[] args) {
        // Création d'une personne de 170 cm de taille
        Personne personne = new Personne(170);
        // Affichage de la mesure de la personne
        afficheMesurable(personne);
        
        // Création d'un cercle de rayon 5 cm
        Cercle cercle = new Cercle(5);
        // Affichage de la mesure du cercle
        afficheMesurable(cercle);
    }
}
