// Classe de test pour tester la classe Point
public class TestPoint {
    public static void main(String[] args) {
        // Test du constructeur par défaut
        Point point1 = new Point();
        point1.afficherCoordonnees(); // Affiche (0, 0)

        // Test du constructeur avec des valeurs données
        Point point2 = new Point(3, 5);
        point2.afficherCoordonnees(); // Affiche (3, 5)

        // Test du constructeur avec un tableau de valeurs
        int[] valeurs = {7, 2};
        Point point3 = new Point(valeurs);
        point3.afficherCoordonnees(); // Affiche (7, 2)

        // Test du constructeur copieur
        Point point4 = new Point(point2);
        point4.afficherCoordonnees(); // Affiche (3, 5)
    }
}