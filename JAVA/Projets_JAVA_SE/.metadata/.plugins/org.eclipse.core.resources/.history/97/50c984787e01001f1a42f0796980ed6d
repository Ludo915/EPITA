// Définition de la classe Point
class Point {
    private int x;
    private int y;

    // Constructeur par défaut (abscisse et ordonnée égaux à zéro)
    public Point() {
        this.x = 0;
        this.y = 0;
    }

    // Constructeur avec une valeur donnée pour l'abscisse et l'ordonnée
    public Point(int x, int y) {
        this.x = x;
        this.y = y;
    }

    // Constructeur avec deux valeurs données pour l'abscisse et l'ordonnée
    public Point(int[] values) {
        if (values.length != 2) {
            throw new IllegalArgumentException("Deux valeurs sont attendues pour l'abscisse et l'ordonnée.");
        }
        this.x = values[0];
        this.y = values[1];
    }

    // Constructeur copieur prenant un autre objet Point comme paramètre
    public Point(Point otherPoint) {
        this.x = otherPoint.x;
        this.y = otherPoint.y;
    }

    // Méthode pour afficher les coordonnées du point
    public void afficherCoordonnees() {
        System.out.println("Coordonnées du point : (" + this.x + ", " + this.y + ")");
    }
}


